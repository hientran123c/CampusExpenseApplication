<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_sky"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="Logo"
                android:src="@drawable/kuro"
                tools:ignore="HardcodedText" />
            <TextView
                android:fontFamily="@font/genshin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MiExpense"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/tvSystemLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Tech Student Save the Money"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Enter username"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />
            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Enter phone number"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Already have account ?"
                    android:textColor="#404144"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login now"
                    android:textColor="#DFCD8F"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#404144"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>