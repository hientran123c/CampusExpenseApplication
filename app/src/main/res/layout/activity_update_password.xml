<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_sky"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="Logo"
                android:src="@drawable/kuro"
                tools:ignore="HardcodedText" />

            <TextView
                android:fontFamily="@font/genshin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MiExpense"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvSystemLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Tech Student Save the Money"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Enter new Password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/edtConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="#F3F3F3"
                android:hint="Confirm new Password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/btnSaveChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#404144"
                    android:text="Save your changed"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>