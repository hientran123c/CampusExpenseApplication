<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SettingFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnManageCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Categories"
                android:textAlignment="textStart"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <Button
                android:id="@+id/btnManageRecurring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recurring Expenses"
                android:textAlignment="textStart"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_menu_rotate"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <Button
                android:id="@+id/btnAppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Theme"
                android:textAlignment="textStart"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_menu_preferences"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <Button
                android:id="@+id/btnNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textAlignment="textStart"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_popup_reminder"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textAlignment="textStart"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_menu_info_details"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textAlignment="textStart"
                android:padding="16dp"
                android:drawableEnd="@android:drawable/ic_lock_power_off"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#F44336"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:gravity="center"
        android:layout_marginTop="32dp"/>

</LinearLayout>